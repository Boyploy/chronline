!!! 5
%html
  %head
    %title= yield :title
    %script{type: "text/javascript", src: "http://use.typekit.com/dwv2bjy.js"}
    :javascript
      try{Typekit.load()}catch(e){}
    = stylesheet_link_tag "site", :media => "all"
    = render 'site/partials/openx'
    = csrf_meta_tags
  %body
    #fb-root
    .container
      = render 'site/partials/header'
      %section#content.clearfix= yield
      = render 'site/partials/footer'
    #scripts
      = render 'site/partials/facebook-sdk'
      = javascript_include_tag "site"
