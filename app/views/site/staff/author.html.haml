- provide :title, @staff.name

- content_for :title_block do
  %h1= @staff.name

.span-7
  - @staff.articles.each do |article|
    .rounded
      %a.hover{href: site_article_path(article)}
        .content-container
          %h3= article.title
          .subtitle
            %span.date= article.created_at.strftime("%B %e, %Y")
            %span.author= byline(article)
          %p= article.teaser

.span-5.last
  .author-profile
    %h2.vertical-label Profile
    .rounded
      .content-container
        .author-info
          %h2= @staff.name
          %p.affiliation= @staff.affiliation
          - if @staff.twitter
            = link_to "@#{@staff.twitter}", "http://twitter.com/#{@staff.twitter}", class: 'twitter'
          %p.tagline= @staff.tagline
        %p.biography= @staff.biography
